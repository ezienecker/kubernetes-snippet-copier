{
    "name": "Kubernetes Snippet Copier",
    "action": {},
    "manifest_version": 3,
    "version": "1.0.0",
    "description": "Kubernetes Snippet Copier is a tool to copy code snippets from the k8s documentation easily and quickly",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://kubernetes.io/docs/*"
            ],
            "css": [
                "content.css"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ]
}